[sqlfluff]
dialect = postgres
templater = dbt
exclude_rules = L009,L031
format = github-annotation
max_line_length = 120
verbosity = 1
indent_unit = space
tab_space_size = 4
indented_ctes = True

[sqlfluff:templater:dbt]
project_dir = retail_analytics
profiles_dir = retail_analytics

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper
